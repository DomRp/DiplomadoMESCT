<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow"
    android:fitsSystemWindows="true"
    tools:context=".modelo.interfaces.menu.tareas.login.ProfileActivity">

    <RelativeLayout
        android:layout_marginTop="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_login"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_below="@id/imageProfile"
            android:layout_centerHorizontal="true"
            android:fontFamily="monospace"
            android:paddingTop="20dp"
            android:text="Leandro Leonardo"
            android:textColor="@color/colorBlanco"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewAbout"
            android:layout_width="389dp"
            android:layout_height="62dp"
            android:layout_below="@+id/textViewName"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="Desarrollado por Leandro Leonardo"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorAzulGris"
            android:textSize="14sp" />

        <View
            android:id="@+id/upperDivision"
            android:layout_marginTop="30dp"
            android:layout_below="@id/textViewAbout"
            android:background="@color/colorBlanco"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:weightSum="3"
            android:id="@+id/container"
            android:layout_below="@+id/upperDivision"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_weight="1"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewRepos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:paddingTop="20dp"
                    android:text="300"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:paddingTop="7dp"
                    android:text="Respuestas"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewProjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:paddingTop="20dp"
                    android:text="400"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:paddingTop="7dp"
                    android:text="Projectos"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvValoraciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:paddingTop="20dp"
                    android:text="700"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="monospace"
                    android:paddingTop="7dp"
                    android:text="Valoraciones"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/downDivision"
            android:layout_marginTop="30dp"
            android:layout_below="@id/container"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnCompartir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/downDivision"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_blue_light"
            android:drawableStart="@drawable/ic_menu_share"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:text="Compartir perfil"
            android:textAlignment="center"
            android:textColor="@color/colorBlanco"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>