<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondoMESCyT"
    android:fitsSystemWindows="true"
    tools:context=".modelo.intro.introBienvenida.BienvenidaActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivLogoMESCyT"
        android:layout_width="253dp"
        android:layout_height="166dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/logo_white_mescyt2"
        android:foregroundGravity="center_horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="308dp"
        android:fontFamily="@font/autour_one"
        android:text="Proyecto final | Diplomado Android"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorFondoAmarillo"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSubTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="319dp"
        android:fontFamily="@font/autour_one"
        android:text="Copyright 2018  Leandro Leonardo"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlanco"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvTituloFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="287dp"
        android:fontFamily="@font/autour_one"
        android:text="Todos los derechos reservados"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlanco"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvAPI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="199dp"
        android:fontFamily="@font/aclonica"
        android:text="API 26 | 8.0"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorFondoAmarillo"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBienvenida"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="155dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:background="@color/colorFondoRojo"
        android:fontFamily="@font/autour_one"
        android:lineSpacingExtra="8sp"
        android:text="Pulsa para continuar"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"
        android:typeface="normal"
        android:visibility="visible"
        android:onClick="pulsaParaContinuar"/>

</RelativeLayout>